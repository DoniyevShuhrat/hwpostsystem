<UserControl
    x:Class="HWPostSystem.CustomControls.BindablePasswordBox"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:HWPostSystem.CustomControls"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="30"
    d:DesignWidth="800"
    mc:Ignorable="d">

    <PasswordBox
        x:Name="txtPassword"
        Padding="20,0,0,0"
        VerticalContentAlignment="Center"
        BorderBrush="Black"
        BorderThickness="0,0,0,2"
        CaretBrush="Black"
        FontFamily="Montserrat"
        FontSize="13"
        FontWeight="Medium"
        Foreground="Black">

        <PasswordBox.Background>
            <ImageBrush
                AlignmentX="Left"
                ImageSource="/HWPostSystem;component/Images/key-icon-gray.png"
                Stretch="Uniform" />
        </PasswordBox.Background>
    </PasswordBox>

</UserControl>